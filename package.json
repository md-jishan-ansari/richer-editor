{
  "name": "richer-editor",
  "version": "0.1.1",
  "description": "A reusable Tiptap-based rich text editor for React and Next.js (JS/TS)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "tsup",
    "start": "next start",
    "lint": "next lint"
  },
  "peerDependencies": {
    "@tailwindcss/typography": ">=0.5",
    "@tiptap/core": ">=2",
    "@tiptap/extension-color": ">=2",
    "@tiptap/extension-font-family": ">=2",
    "@tiptap/extension-font-size": ">=3.0.0-0",
    "@tiptap/extension-highlight": ">=2",
    "@tiptap/extension-image": ">=2",
    "@tiptap/extension-link": ">=2",
    "@tiptap/extension-subscript": ">=2",
    "@tiptap/extension-superscript": ">=2",
    "@tiptap/extension-task-item": ">=2",
    "@tiptap/extension-task-list": ">=2",
    "@tiptap/extension-text-align": ">=2",
    "@tiptap/extension-text-style": ">=2",
    "@tiptap/extension-youtube": ">=2",
    "@tiptap/react": ">=2",
    "@tiptap/starter-kit": ">=2",
    "clsx": ">=2",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "dependencies": {},
  "devDependencies": {}
